{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/*.ts"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/types.ts"
    ],
    "out": "docs",
    "toc": [
      "RollupPluginHTML2",
      "IPluginOptions"
    ]
  }
}